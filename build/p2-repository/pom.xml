<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.haschemi.utils</groupId>
		<artifactId>build</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<groupId>org.haschemi.utils</groupId>
	<artifactId>p2-repository</artifactId>
	<version>0.0.1.qualifier</version>
	<packaging>eclipse-repository</packaging>

	<profiles>
		<profile>
			<id>nightly</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>1.0-beta-3</version>
						<executions>
							<execution>
								<id>deploy-nightly-p2-repository</id>
								<phase>deploy</phase>
								<goals>
									<goal>upload</goal>
								</goals>
								<configuration>
									<fromDir>${project.build.directory}/repository</fromDir>
									<url>scpexe://bitnami@metrikforge.informatik.hu-berlin.de</url>
									<toDir>/var/p2-repositories/EMFBuilderGenerator/nightly/${buildQualifier}</toDir>
									<serverId>emfbuildergen-repository</serverId>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>release</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>wagon-maven-plugin</artifactId>
						<version>1.0-beta-3</version>
						<executions>
							<execution>
								<id>deploy-p2-repository</id>
								<phase>deploy</phase>
								<goals>
									<goal>upload</goal>
								</goals>
								<configuration>
									<fromDir>${project.build.directory}/repository</fromDir>
									<url>scpexe://bitnami@metrikforge.informatik.hu-berlin.de</url>
									<toDir>/var/p2-repositories/EMFBuilderGenerator/release</toDir>
									<serverId>emfbuildergen-repository</serverId>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.1</version>
						<executions>
							<execution>
								<id>update-p2-artifacts</id>
								<phase>deploy</phase>
								<goals>
									<goal>exec</goal>
								</goals>
								<configuration>
									<executable>ssh</executable>
									<arguments>
										<argument>-t</argument>
										<argument>bitnami@metrikforge.informatik.hu-berlin.de</argument>
										<argument>cd /var/p2-repositories; ./update-p2-files.sh</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
